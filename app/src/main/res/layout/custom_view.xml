<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp">
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/icon_discovery_boss"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp"
    android:visibility="gone"
    />
    <TextView
        android:id="@+id/custom_name"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:gravity="center_vertical|end"
        />
    <TextView
        android:id="@+id/custom_text_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/custom_name"
        android:layout_toEndOf="@+id/custom_name"
        android:layout_toLeftOf="@+id/custom_into_img"
        android:layout_toStartOf="@+id/custom_into_img"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/custom_edit_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/custom_name"
        android:layout_toEndOf="@+id/custom_name"
        android:layout_toLeftOf="@+id/custom_into_img"
        android:layout_toStartOf="@+id/custom_into_img"
        />
    <ImageView
        android:id="@+id/custom_into_img"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_descovery_gd"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        />
</RelativeLayout>