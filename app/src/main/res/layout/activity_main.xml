<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="test.wightview.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:orientation="vertical"
        android:text="itemView"/>

    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/item"
        android:text="editView"
        />

    <Button
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edit"
        android:text="自定义属性"
        />
    <Button
        android:id="@+id/check_listview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edit"
        android:text="选中框的listveiw"
        />

    <Button
        android:text="跳到Fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:id="@+id/btn_fragment"
        android:layout_below="@+id/customView"
        />

    <Button
        android:text="OverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fragment"
        android:layout_marginTop="20dp"
        android:id="@+id/over_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:text="自定义中的TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/over_textview"
        android:layout_marginTop="20dp"
        android:id="@+id/textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:text="Frescoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/over_textview"
        android:layout_marginTop="20dp"
        android:id="@+id/imgview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
